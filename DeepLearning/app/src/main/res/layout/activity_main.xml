<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.udacity.deeplearning.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:padding="16dp"
            android:scaleType="fitStart"
            android:src="@drawable/deeplearning"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/headline"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            style="@style/TextViewStyle"
            android:drawableStart="@drawable/meetdeadline"
            android:text="@string/deadline" />


        <TextView
            style="@style/TextViewStyle"
            android:drawableStart="@drawable/play_icon"
            android:text="@string/content" />

        <TextView
            style="@style/TextViewStyle"
            android:drawableStart="@drawable/note"
            android:text="@string/note" />

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:text="@string/register" />


    </LinearLayout>

</ScrollView>
