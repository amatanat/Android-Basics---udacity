<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorPurple"
  tools:context="com.am.quizapp.QuizActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">

    <FrameLayout
      style="@style/styleFrameLayout"
      android:elevation="4dp"
      tools:ignore="UnusedAttribute">

      <TextView
        android:id="@+id/question_1_text_view"
        style="@style/styleTextView"
        tools:text="question text"/>

    </FrameLayout>

    <RadioGroup
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:orientation="horizontal">

      <RadioButton
        android:id="@+id/question_1_true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/true_radiobutton"/>

      <RadioButton
        android:id="@+id/question_1_false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/false_radiobutton"/>

    </RadioGroup>

    <FrameLayout
      style="@style/styleFrameLayout"
      android:elevation="4dp"
      tools:ignore="UnusedAttribute">

      <TextView
        android:id="@+id/question_2_text_view"
        style="@style/styleTextView"
        tools:text="question text"/>

    </FrameLayout>

    <CheckBox
      android:id="@+id/question_2_chb_1"
      style="@style/styleCheckBox"
      android:layout_marginTop="8dp"
      tools:text="text"/>

    <CheckBox
      android:id="@+id/question_2_chb_2"
      style="@style/styleCheckBox"
      android:layout_marginTop="4dp"
      tools:text="text"/>

    <CheckBox
      android:id="@+id/question_2_chb_3"
      style="@style/styleCheckBox"
      android:layout_marginTop="8dp"
      tools:text="text"/>

    <CheckBox
      android:id="@+id/question_2_chb_4"
      style="@style/styleCheckBox"
      android:layout_marginTop="4dp"
      tools:text="text"/>

  </LinearLayout>

</ScrollView>
