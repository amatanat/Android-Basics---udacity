<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.amatanat.arrowmusicapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GenresActivity"
            android:label="@string/genres"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MoodActivity"
            android:label="@string/mood"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ArtistsActivity"
            android:label="@string/artists"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".PopularSongsActivity"
            android:label="@string/popular_songs"
            android:parentActivityName=".MainActivity"/>

        <activity android:name=".NewReleasesActivity"
            android:label="@string/new_releases"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>